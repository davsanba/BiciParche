<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.unal.davsanba.biciparche.CreateRouteActivity" android:weightSum="1">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/text_view_map_display_info" android:layout_margin="10dp"/>
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/map"
              tools:context="com.unal.davsanba.biciparche.CreateRouteActivity"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_weight="0.72"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="top|center_horizontal"
            android:gravity="center_horizontal" android:layout_marginBottom="15dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_map_route_delete"
                android:id="@+id/btn_map_remove" android:layout_margin="5dp" android:layout_gravity="center_vertical"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_map_done"
                android:id="@+id/btn_map_done" android:layout_gravity="center_vertical" android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>