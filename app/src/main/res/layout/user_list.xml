<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="5dp">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/image_user_preview" android:padding="5dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="2dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Large Text"
                    android:id="@+id/static_user_list_name" android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
                    android:textStyle="bold" android:gravity="center" android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="2dp" android:weightSum="1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Large Text"
                    android:id="@+id/static_user_list_mail" android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black" android:lines="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="2dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Large Text"
                    android:id="@+id/static_user_list_career" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                    android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
