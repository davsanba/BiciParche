<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="5dp">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/image_user_preview" android:padding="5dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Large Text"
                android:id="@+id/static_user_list_name" android:layout_marginRight="2dp" android:layout_marginLeft="2dp"
                android:textStyle="bold" android:textColor="@android:color/black"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Large Text"
                android:id="@+id/static_user_list_mail" android:layout_marginRight="5dp" android:layout_marginLeft="2dp"
                android:textColor="@android:color/black" android:lines="1" android:textSize="10dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Large Text"
                android:id="@+id/static_user_list_career" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:textColor="@android:color/black" android:textSize="10dp"/>
    </LinearLayout>
</LinearLayout>
